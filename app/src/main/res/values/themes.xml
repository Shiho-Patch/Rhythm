<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash screen starting theme (SplashScreen compat library â€” Android 12+) -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#121212</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/rhythm_logo</item>
        <item name="windowSplashScreenAnimationDuration">10</item>
        <item name="postSplashScreenTheme">@style/Theme.Rhythm</item>
    </style>

    <!-- Base app theme -->
    <style name="Theme.Rhythm" parent="android:Theme.DeviceDefault.NoActionBar">
        <!-- Prevent white flash on startup -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
</resources>