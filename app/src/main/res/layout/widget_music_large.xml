<?xml version="1.0" encoding="utf-8"?>
<!-- 3x3 Large Widget - Enhanced Material 3 Design -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="20dp">

    <!-- Content -->
    <LinearLayout
        android:id="@+id/widget_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Premium Album Art Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/widget_album_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/album_art"
                android:background="@drawable/album_art_background"
                android:layout_margin="8dp"
                android:clipToOutline="true"
                android:elevation="4dp" />
        </FrameLayout>

        <!-- Song Info Section with improved hierarchy -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/widget_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_song_playing"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/widget_on_surface_dark"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="1.2" />

            <TextView
                android:id="@+id/widget_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown_artist"
                android:textSize="15sp"
                android:textColor="@color/widget_on_surface_variant_dark"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:alpha="0.9" />

            <TextView
                android:id="@+id/widget_album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown_album"
                android:textSize="13sp"
                android:textColor="@color/widget_on_surface_variant_dark"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:alpha="0.8" />
        </LinearLayout>

        <!-- Enhanced Controls Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingBottom="4dp">

            <ImageButton
                android:id="@+id/widget_previous"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_skip_previous"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/skip_previous"
                android:scaleType="centerInside"
                android:padding="14dp"
                android:elevation="2dp" />

            <ImageButton
                android:id="@+id/widget_play_pause"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@drawable/ic_play_arrow"
                android:background="@drawable/widget_button_background_primary"
                android:contentDescription="@string/play_pause"
                android:scaleType="centerInside"
                android:padding="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:elevation="4dp" />

            <ImageButton
                android:id="@+id/widget_next"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_skip_next"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/skip_next"
                android:scaleType="centerInside"
                android:padding="14dp"
                android:elevation="2dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
